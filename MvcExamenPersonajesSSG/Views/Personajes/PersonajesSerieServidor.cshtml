@model IEnumerable<MvcExamenPersonajesSSG.Models.Personaje>

@{
    ViewData["Title"] = "PersonajesSerieServidor";
}

<h1>Personajes Serie Servidor</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdSerie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <img src="@item.Imagen" style="height:150px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdSerie)
            </td>
            <td>
                <a asp-controller="Personajes" asp-action="UpdatePersonaje" asp-route-idpersonaje="@item.IdPersonaje" > Edit</a> |
                <a asp-controller="Personajes" asp-action="DeletePersonaje" asp-route-idpersonaje="@item.IdPersonaje" > Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
